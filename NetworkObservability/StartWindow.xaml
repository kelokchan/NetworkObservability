<Window x:Class="NetworkObservability.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkObservability"
        mc:Ignorable="d"
        Title="Select" Height="400" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- (0, 0) -->
        <ScrollBar Grid.Row="0" Grid.Column="0">
        </ScrollBar>
        
        <!-- (0, 1) -->
        <Grid Grid.Row="0" Grid.Column="1">
            <StackPanel Height="150" Orientation="Horizontal">
                <Label Margin="0,3,0,0" VerticalAlignment="Top">Select constraint:</Label>
                <ComboBox Height="18" Width="80" Margin="0,5,0,0" VerticalAlignment="Top">
                <ComboBoxItem>Greater than</ComboBoxItem>
                <ComboBoxItem>Less than</ComboBoxItem>
                <ComboBoxItem>Equal to</ComboBoxItem>
                <ComboBoxItem>Range</ComboBoxItem>
            </ComboBox>
                <TextBox Margin="10,5,0,0" Width="80" VerticalAlignment="Top"></TextBox>
            </StackPanel>
            <!-- bottom part of (0, 1) -->
            <StackPanel Height="150" Orientation="Horizontal">
                <Label Margin="0,38,0,0">Between (min)</Label>
                <TextBox Width="80" VerticalAlignment="Top" Margin="0,40,0,0"/>
                <Label Margin="0,38,0,0">and (max)</Label>
                <TextBox Width="80" VerticalAlignment="Top" Margin="0,40,0,0"></TextBox>
            </StackPanel>
        </Grid>
        
        <!-- (1, 0) -->
        <ScrollBar Grid.Row="1" Grid.Column="0">
        </ScrollBar>
        
        <!-- (1, 1) -->
        <Grid Grid.Row="1" Grid.Column="1">
        </Grid>
    </Grid>
</Window>
